<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gst.pcp.best.payment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/navigation_action"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/green_400">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PayUmoney"
                    android:textColor="@color/white"
                   android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/paybackground"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center|left">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Client Name :- "
                        android:textSize="18dp"
                        android:textColor="#737373"
                        android:layout_marginLeft="10dp"
                        />




                    <TextView
                        android:id="@+id/fname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#737373"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b8b8b8"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center|left">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No.    :- "
                        android:textSize="18dp"
                        android:textColor="#737373"
                        android:layout_marginLeft="10dp"
                        />




                    <TextView
                        android:id="@+id/pnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#737373"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b8b8b8"></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center|left">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email             :- "
                        android:textSize="18dp"
                        android:textColor="#737373"
                        android:layout_marginLeft="10dp"
                        />




                    <TextView
                        android:id="@+id/emailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#737373"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b8b8b8"></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center|left">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fees              :- "
                        android:textSize="18dp"
                        android:textColor="#737373"
                        android:layout_marginLeft="10dp"
                        />




                    <TextView
                        android:id="@+id/rechargeAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#737373"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>












            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center">



                <Button
                    android:id="@+id/Paynow"
                    android:layout_width="120dip"
                    android:layout_height="50dip"
                    android:text="Pay Now"
                    android:textColor="@android:color/white"
                    android:background="@drawable/paybtnpayumoney"
                    android:layout_margin="10dp"
                    />

                <Button
                    android:id="@+id/backbtn"
                    android:layout_width="120dip"
                    android:layout_height="50dip"
                    android:text="Cancel"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/paybtnpayumoney"


                    android:layout_centerHorizontal="true"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:background="@drawable/paybackground">





            </LinearLayout>





        </LinearLayout>








    </LinearLayout>







</RelativeLayout>